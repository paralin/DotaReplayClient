        <Image Source="Resources/dc.png" Width="200" Margin="147,10,147,45" />
        <TextBlock Text="REPLAY" TextAlignment="Center" VerticalAlignment="Bottom" FontFamily="/DOTAReplayClient;component/#Armata" FontSize="22" Foreground="#FFF1F1F1" Width="100" RenderTransformOrigin="0.527,1.498" Margin="197,0,197,13"/>
        <Controls:MetroProgressBar Height="20" VerticalAlignment="Bottom" Value="50" IsIndeterminate="True" Foreground="#FF27AE60" />
    </Grid>
